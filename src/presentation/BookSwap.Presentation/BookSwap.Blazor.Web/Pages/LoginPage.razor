@layout EmptyLayout
@page "/Login"
@* w50 p3 <3 *@
<div class="shadow p-3 mb-5 bg-body-tertiary rounded w-50 p-3">
    <div class="mb-3 w-100">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" @bind="user.UserNameOrEmail">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3 w-100">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" @bind="user.Password">
    </div>
    <div class="mb-3 form-check w-100">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary" @onclick="Login">Submit</button>
</div>  

